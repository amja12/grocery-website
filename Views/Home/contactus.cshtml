@{
    ViewData["Title"] = "Contact Us";
    ViewBag.ClassName = "contact containers";
}
    <div class="contact containers">
        <div class="contactus">
			<div class="header">
				<h1>Contact Us</h1>
				<p>Send us a message and we will be in touch within one business day.</p>
			</div>
			<div class="details">
				<div class="right">
					<ul>
						<li><img src="../img/icons/ringer.png"><a href="">+91 999XXXXXXX</a></li>
						<li><img src="../img/icons/email.png"><a href="">xxxxxxxxx@gmail.com</a></li>
						<li><img src="../img/icons/facebook.png"><a href="">Facebook</a></li>
						<li><img src="../img/icons/twitter.png"><a href="">Twitter</a></li>
						<li><img src="../img/icons/instagram.png"><a href="">Instagram</a></li>
					</ul>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <p>Welcome, @User.Identity.Name!</p>
                        <form asp-controller="Home" asp-action="Logout" method="post" id="logoutForm">
                        <button type="submit" class="btn btn-link">Sign out</button>
                         </form>
                    }
                    else
                    {
                        <h5>Already with grocery store?</h5>
					    <a asp-controller="Home" asp-action="GetAccount">sign up instantly</a>
                        <a asp-controller="Home" asp-action="Login">sign in</a>
                    }
					
				</div>
			</div>
		</div>
     </div>
@section Scripts {
    <script>
        @{
            var alertMessage = TempData["AlertMessage"] as string; // Retrieve the alert message from TempData
        }
        @if (!string.IsNullOrEmpty(alertMessage))
        {
            <text>
                alert('@alertMessage'); // Display the alert message using JavaScript
            </text>
        }
    </script>
}     